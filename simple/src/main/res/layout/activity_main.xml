<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_activity_normal"
        style="@style/ListTextStyle"
        android:text="普通Activity" />

    <TextView
        android:id="@+id/tv_activity_full_screen"
        style="@style/ListTextStyle"
        android:text="全屏Activity" />

    <TextView
        android:id="@+id/tv_activity_common"
        style="@style/ListTextStyle"
        android:text="通用弹窗" />

    <TextView
        android:id="@+id/tv_activity_drag"
        style="@style/ListTextStyle"
        android:text="抽屉弹窗" />

</LinearLayout>
