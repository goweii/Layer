<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="per.goweii.layer.simple">

    <application
        android:name="per.goweii.layer.simple.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="per.goweii.layer.simple.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="per.goweii.layer.simple.NormalActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation|screenSize|keyboard|smallestScreenSize|screenLayout" />
        <activity
            android:name="per.goweii.layer.simple.FullScreenActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation|screenSize|keyboard|smallestScreenSize|screenLayout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="per.goweii.layer.simple.CommonActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation|screenSize|keyboard|smallestScreenSize|screenLayout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="per.goweii.layer.simple.DragActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation|screenSize|keyboard|smallestScreenSize|screenLayout" />
    </application>

</manifest>