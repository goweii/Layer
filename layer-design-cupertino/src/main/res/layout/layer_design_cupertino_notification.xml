<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layer_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layer_design_cupertino_notification_shadow_offset_y"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layer_design_cupertino_margin_default"
    android:paddingTop="@dimen/layer_design_cupertino_margin_default"
    android:paddingRight="@dimen/layer_design_cupertino_margin_default"
    android:paddingBottom="@dimen/layer_design_cupertino_margin_default"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:id="@+id/layer_design_cupertino_notification_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layer_design_res_margin_common"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/layer_design_cupertino_notification_icon"
            android:layout_width="@dimen/layer_design_cupertino_icon_size"
            android:layout_height="@dimen/layer_design_cupertino_icon_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layer_design_res_margin_common"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:src="@android:drawable/ic_secure"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/layer_design_cupertino_notification_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/layer_design_cupertino_notification_time"
            android:layout_toEndOf="@+id/layer_design_cupertino_notification_icon"
            android:textColor="@color/layer_design_res_color_on_surface_secondary"
            android:textSize="@dimen/layer_design_res_text_size_caption"
            android:visibility="gone"
            tools:text="@tools:sample/full_names"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/layer_design_cupertino_notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layer_design_cupertino_margin_small"
            android:textColor="@color/layer_design_res_color_on_surface_thirdly"
            android:textSize="@dimen/layer_design_res_text_size_overline"
            android:visibility="gone"
            tools:text="@tools:sample/date/hhmmss"
            tools:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/layer_design_cupertino_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layer_design_cupertino_margin_thin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/layer_design_res_color_on_surface"
        android:textSize="@dimen/layer_design_res_text_size_body"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/layer_design_cupertino_notification_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/layer_design_res_color_on_surface_secondary"
        android:textSize="@dimen/layer_design_res_text_size_body2"
        android:visibility="gone"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

</LinearLayout>