<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layer_notification_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layer_design_res_margin_common"
    android:layout_marginTop="@dimen/layer_design_res_margin_common"
    android:layout_marginRight="@dimen/layer_design_res_margin_common"
    android:layout_marginBottom="@dimen/layer_design_res_margin_common"
    android:background="@drawable/layer_design_cupertino_notification_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layer_design_res_notification_padding_left"
    android:paddingTop="@dimen/layer_design_res_notification_padding_top"
    android:paddingRight="@dimen/layer_design_res_notification_padding_right"
    android:paddingBottom="@dimen/layer_design_res_notification_padding_bottom"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:id="@+id/layer_design_cupertino_notification_content_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layer_design_res_margin_common"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/layer_design_cupertino_notification_content_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layer_design_res_margin_common"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:src="@android:drawable/ic_secure"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/layer_design_cupertino_notification_content_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layer_design_res_margin_common"
            android:textColor="@color/layer_design_res_notification_label_text_color"
            android:textSize="@dimen/layer_design_res_notification_label_text_size"
            android:visibility="gone"
            tools:text="@tools:sample/full_names"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/layer_design_cupertino_notification_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/layer_design_res_notification_time_text_color"
            android:textSize="@dimen/layer_design_res_notification_time_text_size"
            android:visibility="gone"
            tools:text="@tools:sample/date/hhmmss"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/layer_design_cupertino_notification_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layer_design_res_margin_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/layer_design_res_notification_title_text_color"
        android:textSize="@dimen/layer_design_res_notification_title_text_size"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/layer_design_cupertino_notification_content_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/layer_design_res_notification_desc_text_color"
        android:textSize="@dimen/layer_design_res_notification_desc_text_size"
        android:visibility="gone"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

</LinearLayout>