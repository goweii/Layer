<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layer_toast_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|bottom"
    android:background="@drawable/layer_design_cupertino_toast_bg"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/layer_design_res_toast_padding_left"
    android:paddingTop="@dimen/layer_design_res_toast_padding_top"
    android:paddingRight="@dimen/layer_design_res_toast_padding_right"
    android:paddingBottom="@dimen/layer_design_res_toast_padding_bottom"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/layer_design_cupertino_toast_content_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layer_design_res_margin_common"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription"
        tools:layout_height="22dp"
        tools:layout_width="22dp"
        tools:src="@color/layer_design_res_toast_text_color" />

    <TextView
        android:id="@+id/layer_design_cupertino_toast_content_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/layer_design_res_toast_text_color"
        android:textSize="@dimen/layer_design_res_toast_text_size"
        tools:text="TOAST LAYER" />

</LinearLayout>