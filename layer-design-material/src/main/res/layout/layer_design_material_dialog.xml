<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/layer_design_material_dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/layer_design_res_margin_common"
    android:layout_marginTop="@dimen/layer_design_res_margin_common"
    android:layout_marginRight="@dimen/layer_design_res_margin_common"
    android:layout_marginBottom="@dimen/layer_design_res_margin_common"
    app:cardBackgroundColor="@color/layer_design_res_color_surface"
    app:cardCornerRadius="@dimen/layer_design_res_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layer_design_material_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layer_design_material_margin_big"
            android:layout_marginTop="@dimen/layer_design_material_margin_default"
            android:layout_marginRight="@dimen/layer_design_material_margin_big"
            android:textColor="@color/layer_design_res_color_on_surface"
            android:textSize="@dimen/layer_design_material_text_size_title"
            android:textStyle="bold"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/layer_design_material_dialog_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/layer_design_material_margin_big"
            android:layout_marginTop="@dimen/layer_design_material_margin_default"
            android:layout_marginRight="@dimen/layer_design_material_margin_big"
            android:layout_marginBottom="@dimen/layer_design_material_margin_default"
            android:textColor="@color/layer_design_res_color_on_surface"
            android:textSize="@dimen/layer_design_material_text_size_desc"
            tools:text="A message should be a short, complete sentence." />

        <LinearLayout
            android:id="@+id/layer_design_material_dialog_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/layer_design_material_margin_default"
            android:layout_marginRight="@dimen/layer_design_material_margin_default"
            android:layout_marginBottom="@dimen/layer_design_material_margin_default"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>